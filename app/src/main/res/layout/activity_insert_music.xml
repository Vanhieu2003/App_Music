<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context=".Activity.InsertMusicActivity"
    android:background="@color/black"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"

        android:background="@drawable/spotifylogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Spotify ®"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="34dp"
        android:gravity="center"
        android:text="Insert Music"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="34dp"
        android:text="Tên Bài Hát:"
        android:textColor="@color/white"
        android:textSize="16dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="34dp"
        android:text="Link Hình bài hát:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_img_song"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="34dp"
        android:background="@color/white"
        android:hint="URL"
        android:text=""
        android:textSize="15dp"
        android:textColor="@color/black"
        />



    <EditText
        android:id="@+id/edt_nameSong"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="29dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="34dp"
        android:text="Link Bài Hát:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_url_song"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:hint="URL"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="34dp"
        android:background="@color/white"
        android:textSize="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="34dp"
        android:text="Mô tả:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_mota_song"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="34dp"
        android:background="@color/white"
        android:textSize="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="34dp"
        android:text="Thể loại:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_TL_Song"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="34dp"
        android:hint="1-Pop ,2-Rap, 3-Trữ tình, 4-Thiếu Nhi"
        android:background="@color/white"
        android:textSize="15dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="34dp"
        android:text="Nghệ sĩ:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_idartist_music"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="34dp"
        android:hint="Nhập mã nghệ sĩ của bạn"
        android:background="@color/white"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_insert_music"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/oval_button"
        android:gravity="center"
        android:text="INSERT MUSIC"
        android:textSize="15dp"
        android:textColor="@color/black"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_insert_music"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/oval_button"
        android:gravity="center"

        android:text="back"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

</RelativeLayout>
